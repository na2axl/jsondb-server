<Window x:Class="JSONDB.UI.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONDB.UI"
        mc:Ignorable="d"
        Title="" WindowStartupLocation="CenterOwner" MinWidth="400" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight">
    <DockPanel>
        <DockPanel x:Name="MessagePanel" VerticalAlignment="Top" Margin="20,20,20,0" DockPanel.Dock="Top" Height="80" >
            <Image x:Name="MessageBoxImage" Margin="10,0" DockPanel.Dock="Left"  VerticalAlignment="Center" />
            <Label x:Name="MessageBoxText" Margin="10,0,0,0" DockPanel.Dock="Left" VerticalAlignment="Center" />
        </DockPanel>
        <DockPanel x:Name="ButtonsPanel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" DockPanel.Dock="Top">
            <Button x:Name="ButtonOK" Height="30" Width="75" Content="OK" Margin="10" />
            <Button x:Name="ButtonYes" Height="30" Width="75" Content="Yes" Margin="10" />
            <Button x:Name="ButtonNo" Height="30" Width="75" Content="No" Margin="10" />
            <Button x:Name="ButtonCancel" Height="30" Width="75" Content="Cancel" Margin="10" />
        </DockPanel>
    </DockPanel>
</Window>
